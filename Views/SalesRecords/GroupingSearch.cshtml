@model IEnumerable<IGrouping<Department, SalesRecord>>
@{
    ViewData["Title"] = "Busca Agrupada";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-dark bg-primary mb-3 p-3 rounded">
    <div class="container-fluid">
        <form class="d-flex" role="search" asp-action="GroupingSearch">
            <div class="d-flex align-items-center gap-2">
                <label class="text-white">Min</label>
                <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />

                <label class="text-white">Max</label>
                <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />

                <button type="submit" class="btn btn-success">Filtrar</button>
            </div>
        </form>
    </div>
</nav>

@foreach (var departmentGroup in Model)
{
    <div class="card border-primary mb-3">
        <div class="card-header bg-primary text-white">
            Departamento: @departmentGroup.Key.Name,
            Total vendas = @departmentGroup.Key.TotalSales(DateTime.Parse(ViewData["minDate"].ToString()), DateTime.Parse(ViewData["maxDate"].ToString())).ToString("C")
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="table-primary">
                        <th>Data</th>
                        <th>Valor</th>
                        <th>Vendedor</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in departmentGroup)
                    {
                        <tr>
                            <td>@item.Date.ToShortDateString()</td>
                            <td>@item.Amount.ToString("C")</td>
                            <td>@item.Seller.Name</td>
                            <td>@item.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}