@model IEnumerable<AuraCommerce.Models.SalesRecord>
@{
    ViewData["Title"] = "Busca Simples";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-dark bg-primary mb-3 p-3 rounded">
    <div class="container-fluid">
        <form class="d-flex" role="search" asp-action="SimpleSearch">
            <div class="d-flex align-items-center gap-2">
                <label class="text-white">Min</label>
                <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />

                <label class="text-white">Max</label>
                <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />

                <button type="submit" class="btn btn-success">Filtrar</button>
            </div>
        </form>
    </div>
</nav>

<div class="card border-primary mb-3">
    <div class="card-header bg-primary text-white">Total de Vendas = @Model.Sum(obj => obj.Amount).ToString("C")</div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-primary">
                    <th>ID</th>
                    <th>Data</th>
                    <th>Vendedor</th>
                    <th>Departamento</th>
                    <th>Valor</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.Seller.Name</td>
                        <td>@item.Seller.Department.Name</td>
                        <td>@item.Amount.ToString("C")</td>
                        <td>@item.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>