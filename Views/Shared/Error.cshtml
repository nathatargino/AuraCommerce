@model ErrorViewModel

@{
    ViewData["Title"] = "Erro";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border border-danger rounded-4 overflow-hidden" style="box-shadow: 0 0 25px rgba(220, 53, 69, 0.3)!important;">

                <div class="card-header bg-danger text-white py-3 text-center">
                    <h1 class="display-1 fw-bold"><i class="bi bi-emoji-dizzy"></i></h1>
                    <h4 class="mb-0 fw-bold">Ops! Algo deu errado.</h4>
                </div>

                <div class="card-body p-4 bg-dark text-white text-center">

                    <h5 class="text-danger fw-bold mb-3">@Model.Message</h5>

                    @if (Model.ShowRequestId)
                    {
                        <p class="text-white-50 small">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <hr class="border-secondary my-4">

                    <p class="mb-4">Não se preocupe, seus dados estão seguros. Tente novamente ou volte para a lista.</p>

                    <a href="javascript:history.back()" class="btn btn-light text-danger px-4 rounded-pill fw-bold shadow-sm">
                        <i class="bi bi-arrow-left me-2"></i>Voltar
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>