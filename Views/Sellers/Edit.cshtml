@model AuraCommerce.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Editar Vendedor";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border border-warning rounded-4 overflow-hidden" style="box-shadow: 0 0 20px rgba(255, 193, 7, 0.2)!important;">

                <div class="card-header bg-warning text-dark py-3">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i>Editar Vendedor</h4>
                </div>

                <div class="card-body p-4 bg-dark">
                    <form asp-action="Edit">

                        <input type="hidden" asp-for="Seller.Id" />
                        <input type="hidden" asp-for="Seller.RowVersion" />

                        <div class="mb-3">
                            <label asp-for="Seller.Name" class="form-label text-white">Nome Completo</label>
                            <input asp-for="Seller.Name" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Seller.Email" class="form-label text-white">E-mail</label>
                            <input asp-for="Seller.Email" class="form-control" type="email" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Seller.BirthDate" class="form-label text-white">Data de Nascimento</label>
                                <input asp-for="Seller.BirthDate" class="form-control" type="date" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Seller.BaseSalary" class="form-label text-white">Salário Base</label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="Seller.BaseSalary" asp-format="{0:F2}" id="salary" class="form-control" type="text" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Seller.DepartmentId" class="form-label text-white">Departamento</label>
                            <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-select"></select>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-light px-4 text-dark fw-bold">Cancelar</a>
                            <button type="submit" class="btn btn-warning px-4 fw-bold shadow">
                                <i class="bi bi-check-circle-fill me-2"></i>Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#salary').mask('#.##0,00', {reverse: true});
        });
        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)(?:,\d+)?$/.test(value);
        }
    </script>
}