@model IEnumerable<AuraCommerce.Models.Seller>

@{
    ViewData["Title"] = "Vendedores";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-white">Vendedores</h1>
            <p class="text-white-50">Gerencie sua equipe de vendas</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-person-plus-fill me-2"></i>Novo Vendedor
        </a>
    </div>

    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-4 py-3">@Html.DisplayNameFor(model => model.Name)</th>
                        <th class="py-3">@Html.DisplayNameFor(model => model.Email)</th>
                        <th class="py-3">@Html.DisplayNameFor(model => model.BirthDate)</th>
                        <th class="py-3">@Html.DisplayNameFor(model => model.BaseSalary)</th>
                        <th class="text-end pe-4 py-3">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-white">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-white-50">@Html.DisplayFor(modelItem => item.Email)</td>
                            <td class="text-white-50">@item.BirthDate.ToString("dd/MM/yyyy")</td>
                            <td class="text-success fw-bold">R$ @Html.DisplayFor(modelItem => item.BaseSalary)</td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm rounded-circle mx-1" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light btn-sm rounded-circle mx-1" title="Detalhes">
                                    <i class="bi bi-search"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm rounded-circle mx-1" title="Excluir">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>