@model AuraCommerce.Models.Seller

@{
    ViewData["Title"] = "Detalhes";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border border-primary rounded-4 overflow-hidden" style="box-shadow: 0 0 20px rgba(13, 110, 253, 0.2)!important;">

                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-person-vcard-fill me-2"></i>Ficha do Vendedor</h4>
                </div>

                <div class="card-body p-4 bg-dark text-white">

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-white-50">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-8 fw-bold fs-5">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4 text-white-50">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4 text-white-50">@Html.DisplayNameFor(model => model.BirthDate)</dt>
                        <dd class="col-sm-8">@Model.BirthDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4 text-white-50">@Html.DisplayNameFor(model => model.BaseSalary)</dt>
                        <dd class="col-sm-8 text-success fw-bold">R$ @Html.DisplayFor(model => model.BaseSalary)</dd>

                        <dt class="col-sm-4 text-white-50">Departamento</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Html.DisplayFor(model => model.Department.Name)</span>
                        </dd>
                    </dl>

                    <hr class="border-secondary my-4">

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-light px-4 text-dark fw-bold rounded-pill">
                            <i class="bi bi-arrow-left me-2"></i>Voltar
                        </a>

                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 text-dark fw-bold rounded-pill shadow">
                            <i class="bi bi-pencil-fill me-2"></i>Editar
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>