@model AuraCommerce.Models.Department

@{
    ViewData["Title"] = "Novo Departamento";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border border-secondary rounded-4 overflow-hidden" style="box-shadow: 0 0 25px rgba(0,0,0,0.5)!important;">

                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-building-add me-2"></i>Novo Departamento</h4>
                </div>

                <div class="card-body p-4 bg-dark">
                    <form asp-action="Create">

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label text-white">Nome do Setor</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Ex: Logística, RH..." autofocus />
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-light px-4 text-dark fw-bold">Cancelar</a>
                            <button type="submit" class="btn btn-success px-4 fw-bold shadow">
                                <i class="bi bi-check-lg me-2"></i>Salvar
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}