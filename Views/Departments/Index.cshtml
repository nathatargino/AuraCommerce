@model IEnumerable<AuraCommerce.Models.Department>

@{
    ViewData["Title"] = "Departamentos";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-white">Departamentos</h1>
            <p class="text-white-50">Setores da empresa</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-building-add me-2"></i>Novo Departamento
        </a>
    </div>

    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-4 py-3">@Html.DisplayNameFor(model => model.Id)</th>
                        <th class="py-3">@Html.DisplayNameFor(model => model.Name)</th>
                        <th class="text-end pe-4 py-3">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 text-white-50">#@Html.DisplayFor(modelItem => item.Id)</td>
                            <td class="fw-bold text-white fs-5">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm rounded-circle mx-1" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light btn-sm rounded-circle mx-1" title="Detalhes">
                                    <i class="bi bi-search"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm rounded-circle mx-1" title="Excluir">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>